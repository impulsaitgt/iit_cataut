<?xml version="1.0" ?>

<odoo>

    <record id="sale_order_aut_tree_view" model="ir.ui.view">
        <field name="name">sale.order.auth.tree.view</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Autorizaciones">
                <field name="sol_autorizado" attrs="{'column_invisible': True}"></field>
                <field name="sol_requiere_autorizacion" attrs="{'column_invisible': True}"></field>

                <field name="order_id"/>
                <field name="product_id"/>
                <field name="sol_precio_autorizado"/>

                <field name="sol_etiqueta_autorizacion"
                       widget="badge"
                       decoration-danger="sol_autorizado == False"
                       decoration-success="sol_autorizado == True">
                </field>
                <field name="sol_etiqueta_requiere_autorizacion"
                       widget="badge"
                       decoration-danger="sol_requiere_autorizacion == True"
                       decoration-success="sol_requiere_autorizacion == False">
                </field>
                <field name="sol_supervisores" widget='many2many_tags'></field>
                <field name="sol_autorizo"></field>
                <field name="sol_fecha_autorizado"></field>
            </tree>
        </field>
    </record>


            <!-- vista busqueda -->
    <record id="sale_order_aut_tree_search_view" model="ir.ui.view">
        <field name="name">sale.order.auth.tree.search.view</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <search>
                <!-- busqueda rapida -->
                <field name="order_id" string="Pedido"/>
                <field name="product_id" string="Producto"/>
                <!-- filtro rapido -->


            </search>
        </field>
    </record>

</odoo>